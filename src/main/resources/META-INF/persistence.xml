<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="test">

        <class>austral.ing.lab1.model.Car</class>
        <class>austral.ing.lab1.model.CarModel</class>
        <class>austral.ing.lab1.model.Chat</class>
        <class>austral.ing.lab1.model.Location</class>
        <class>austral.ing.lab1.model.Message</class>
        <class>austral.ing.lab1.model.Notification</class>
        <class>austral.ing.lab1.model.PaymentTrip</class>
        <class>austral.ing.lab1.model.Rating</class>
        <class>austral.ing.lab1.model.Trip</class>
        <class>austral.ing.lab1.model.TripPassenger</class>
        <class>austral.ing.lab1.model.TypeNotification</class>
        <class>austral.ing.lab1.model.User</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/lab1" />
            <property name="javax.persistence.jdbc.user" value="lab1" />
            <property name="javax.persistence.jdbc.password" value="1234" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>

    </persistence-unit>
</persistence>
